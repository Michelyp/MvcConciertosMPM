@model IEnumerable<MvcConciertosMPM.Models.Evento>

@{
    ViewData["Title"] = "Eventos";
    List<CategoriaEvento>    categorias = await this.service.GetCategoriasAsync();
    string UrlBucket = keysModel.BucketUrl;
}

<h1>Eventos</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form method="post">
    <select class="form-select" data-bs-toggle="select" name="id">
        @foreach (CategoriaEvento tipo in categorias)
        {
            <option name ="id" value="@tipo.Idcategoria">@tipo.Nombre</option>
        }
    </select>
    <button>Enviar</button>
</form>

   
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCategoria)
            </td>
            <td>
                     <img src="@UrlBucket@item.Imagen" height="150px" /> 
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
 